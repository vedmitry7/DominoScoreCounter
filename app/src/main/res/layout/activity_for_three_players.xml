<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"

    tools:context="com.example.dmitryvedmed.dominocounter.MainActivity">
    <!--    android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"-->


    <RelativeLayout
        android:id="@+id/score_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/keyboard"
        android:layout_below="@+id/certain_score_layout"
        >

        <LinearLayout
            android:id="@+id/scoreboard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_above ="@+id/final_score"
            >

            <ListView
                android:paddingRight="6dp"
                android:paddingLeft="6dp"
                android:id="@+id/first_list_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:divider="@android:color/black"
                android:dividerHeight="1dp"
                android:scrollbars="none"/>

            <RelativeLayout
            android:layout_marginTop="3dp"
            android:background="#616161"
            android:layout_width="1dp"
            android:layout_height="match_parent">
        </RelativeLayout>


            <ListView
                android:paddingRight="6dp"
                android:paddingLeft="6dp"
                android:id="@+id/second_list_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:divider="@android:color/black"
                android:dividerHeight="1dp"
                android:scrollbars="none"/>

            <RelativeLayout
                android:layout_marginTop="3dp"
                android:background="#616161"
                android:layout_width="1dp"
                android:layout_height="match_parent">
            </RelativeLayout>


            <ListView
                android:paddingRight="6dp"
                android:paddingLeft="6dp"
                android:id="@+id/third_list_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:divider="@android:color/black"
                android:dividerHeight="1dp"
                android:scrollbars="none"/>

        </LinearLayout>

        <LinearLayout
            android:layout_alignParentBottom="true"
            android:id="@+id/final_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_marginLeft="6dp"
                    android:layout_alignParentTop="true"
                    android:background="#000000"
                    android:layout_width="match_parent"
                    android:layout_height="1dp">
                </RelativeLayout>

                <TextView
                    android:text="0"
                    android:alpha="0.87"
                    android:textSize="42sp"
                    android:id="@+id/first_final_score"
                    android:textColor="#00FF00"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:background="#000000"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="6dp">
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_marginRight="6dp"
                    android:background="#000000"
                    android:layout_width="match_parent"
                    android:layout_height="1dp">
                </RelativeLayout>

                <TextView
                    android:alpha="0.87"
                    android:layout_alignParentTop="true"
                    android:text="0"
                    android:textSize="42sp"
                    android:id="@+id/second_final_score"
                    android:textColor="#0000FF"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:background="#000000"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="6dp">
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_marginRight="6dp"
                    android:background="#000000"
                    android:layout_width="match_parent"
                    android:layout_height="1dp">
                </RelativeLayout>

                <TextView
                    android:alpha="0.87"
                    android:layout_alignParentTop="true"
                    android:text="0"
                    android:textSize="42sp"
                    android:id="@+id/third_final_score"
                    android:textColor="#0000FF"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

            </RelativeLayout>

        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/certain_score_layout"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <Button
            android:layout_marginLeft="6dp"
            android:id="@+id/btn_setting"
            android:onClick="onClick"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:alpha="0.2"
            android:background="@drawable/ic_settings_grey600_36dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            />

        <RelativeLayout
            android:layout_below="@+id/certain_score"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:background="#000000"
            android:layout_width="match_parent"
            android:layout_height="1dp">
        </RelativeLayout>

        <Button
            android:layout_marginRight="6dp"
            android:id="@+id/backspace"
            android:onClick="onClick"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:alpha="0.2"
            android:background="@drawable/ic_backspace_grey600_48dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            />

        <TextView
            android:text="0"
            android:alpha="0.87"
            android:gravity="center"
            android:textColor="#FF0000"
            android:textSize="42sp"
            android:id="@+id/certain_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/backspace"
            android:layout_toRightOf="@+id/btn_setting"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/keyboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:text="1"
                android:background="@drawable/button_bg"
                style="?android:attr/borderlessButtonStyle"
                android:id="@+id/btn_1"
                android:onClick="onClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <Button
                android:text="2"
                style="?android:attr/borderlessButtonStyle"
                android:background="@drawable/button_bg"
                android:id="@+id/btn_2"
                android:onClick="onClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <Button
                android:text="3"
                style="?android:attr/borderlessButtonStyle"
                android:background="@drawable/button_bg"
                android:id="@+id/btn_3"
                android:onClick="onClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:text="4"
                style="?android:attr/borderlessButtonStyle"
                android:background="@drawable/button_bg"
                android:id="@+id/btn_4"
                android:onClick="onClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:text="5"
                style="?android:attr/borderlessButtonStyle"
                android:background="@drawable/button_bg"
                android:id="@+id/btn_5"
                android:onClick="onClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <Button
                android:text="6"
                style="?android:attr/borderlessButtonStyle"
                android:background="@drawable/button_bg"
                android:id="@+id/btn_6"
                android:onClick="onClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button

                android:text="7"
                style="?android:attr/borderlessButtonStyle"
                android:background="@drawable/button_bg"
                android:id="@+id/btn_7"
                android:onClick="onClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <Button
                android:text="8"
                style="?android:attr/borderlessButtonStyle"
                android:background="@drawable/button_bg"
                android:id="@+id/btn_8"
                android:onClick="onClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <Button
                android:text="9"
                style="?android:attr/borderlessButtonStyle"
                android:background="@drawable/button_bg"
                android:id="@+id/btn_9"
                android:onClick="onClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">

            <ImageButton
                style="?android:attr/borderlessButtonStyle"
                android:id="@+id/cancel"
                android:background="@drawable/button_bg"
                android:src="@drawable/ic_cancel_black_24dp"
                android:layout_gravity="center"
                android:scaleType="centerInside"
                android:onClick="cancelLastInput"
                android:layout_width="0dp"
                android:padding="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <Button
                android:text="0"
                style="?android:attr/borderlessButtonStyle"
                android:background="@drawable/button_bg"
                android:id="@+id/btn_0"
                android:onClick="onClick"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <Button
                android:text="Заново"
                style="?android:attr/borderlessButtonStyle"
                android:background="@drawable/button_bg"
                android:onClick="restart"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
